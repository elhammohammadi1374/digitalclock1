<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maryam.digitilclock2.MainActivity"
    android:background="#020202">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:text="Helloworld!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:textColor="#e943ff"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM"
            android:id="@+id/txt1"
            android:textColor="#43ff84"
            android:layout_alignParentLeft="true"
            android:layout_alignLeft="@+id/txt2"
            android:layout_alignStart="@+id/txt2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07"
            android:id="@+id/txt2"
            android:textSize="65dp"
            android:textColor="#43ff84"
            android:background="#212121"
            android:layout_toLeftOf="@+id/txt4"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sun"
            android:id="@+id/txt3"
            android:textSize="10dp"
            android:textColor="#43ff84"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/b1"
            android:layout_alignLeft="@+id/txt4"
            android:layout_alignStart="@+id/txt4"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:id="@+id/txt4"
            android:textSize="65dp"
            android:textColor="#43ff84"
            android:background="#212121"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-12-17"
            android:textColor="#43ff84"
            android:id="@+id/txt5"
            android:layout_alignLeft="@+id/txt6"
            android:layout_alignStart="@+id/txt6"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35"
            android:textSize="65dp"
            android:textColor="#43ff84"
            android:background="#212121"
            android:id="@+id/txt6"
            android:layout_toRightOf="@+id/txt4"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="250dp" />
    </RelativeLayout>

</RelativeLayout>


